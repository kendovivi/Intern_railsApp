<%= form_for @post do |f| %>

<%= f.label :title %>
<%= f.text_field :title, size: '50' %>

<%= f.label :text %>
<%= f.text_area :text, :size => "70x10" %>

<%= f.label :tag %>
<% for tag in Tag.find(:all) %>
          <%= check_box_tag "post[tag_ids][]", tag.id, @post.tag_ids.include?(tag.id) %>
          <%= tag.name %>
        <% end %>

<% end %>


<% if @post.errors.any? %>
  <!-- Error msg -->
  <div class="row-fluid">
  <div id="errorExplanation" class="offset2" style="color:red">
    <h2>
      <%= pluralize(@post.errors.count, "error")%> prohibited this post from being saved:
    </h2>
    <ul>
      <!-- show the error msg customized -->
      <% @post.errors.each do |key,value| %>
      <li ><%= value %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
</div><br>